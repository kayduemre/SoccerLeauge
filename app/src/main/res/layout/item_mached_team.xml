<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_paired_view_team_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5"

        />

    <TextView
        android:id="@+id/text_view_paired_team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/team_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:fontFamily="@font/proxima_bold"
        android:textColor="@color/color_text"
        app:layout_constraintEnd_toStartOf="@+id/text_view_vs"
        app:layout_constraintBottom_toBottomOf="@+id/circle_image_paired_view_team_logo"
        app:layout_constraintStart_toEndOf="@+id/circle_image_paired_view_team_logo"
        app:layout_constraintTop_toTopOf="@+id/circle_image_paired_view_team_logo"
        app:layout_constraintVertical_bias=".5"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="16dp"
        android:background="@color/background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_paired_team_name" />

    <TextView
        android:id="@+id/text_view_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:text="VS"
        app:layout_constraintEnd_toStartOf="@+id/text_view_paired_team_destination_name"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_paired_team_name"
        app:layout_constraintStart_toEndOf="@+id/text_view_paired_team_name"
        app:layout_constraintTop_toTopOf="@+id/text_view_paired_team_name"

        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_paired_view_destination_team_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5"

        />

    <TextView
        android:id="@+id/text_view_paired_team_destination_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/team_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/proxima_bold"
        android:textColor="@color/color_text"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/text_view_vs"
        app:layout_constraintBottom_toBottomOf="@+id/circle_image_paired_view_destination_team_logo"
        app:layout_constraintEnd_toStartOf="@+id/circle_image_paired_view_destination_team_logo"
        app:layout_constraintTop_toTopOf="@+id/circle_image_paired_view_destination_team_logo"
        app:layout_constraintVertical_bias=".5"

        />

</androidx.constraintlayout.widget.ConstraintLayout>