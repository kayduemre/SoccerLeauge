<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/proxima_bold"
        android:text="@string/dummy_text"
        android:textColor="@color/color_text"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view_team_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_no"
        app:layout_constraintStart_toEndOf="@+id/text_view_no"
        app:layout_constraintTop_toTopOf="@+id/text_view_no"
        app:layout_constraintVertical_bias=".5"

        />

    <TextView
        android:id="@+id/text_view_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/team_name"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/proxima_bold"
        android:textColor="@color/color_text"
        app:layout_constraintBottom_toBottomOf="@+id/circle_image_view_team_logo"
        app:layout_constraintStart_toEndOf="@+id/circle_image_view_team_logo"
        app:layout_constraintTop_toTopOf="@+id/circle_image_view_team_logo"
        app:layout_constraintVertical_bias=".5"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="16dp"
        android:background="@color/background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_team_name" />

</androidx.constraintlayout.widget.ConstraintLayout>